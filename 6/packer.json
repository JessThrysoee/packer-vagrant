{
   "variables": {
      "os": "centos-6",
      "iso_url": "http://mirror.fysik.dtu.dk/linux/centos/6.6/isos/x86_64/CentOS-6.6-x86_64-minimal.iso",
      "iso_checksum": "eb3c8be6ab668e6d83a118323a789e6c",
      "memsize": "512",
      "cpus": "1"
   },

   "builders": [{
      "type": "parallels-iso",
      "guest_os_type": "centos",

      "vm_name": "{{user `os`}}-parallels",

      "prlctl": [
         ["set", "{{.Name}}", "--memsize", "{{user `memsize`}}"],
         ["set", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
      ],

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",

      "parallels_tools_flavor": "lin",
      "parallels_tools_mode" : "attach",

      "boot_wait": "3s",
      "floppy_files": ["ks.cfg"],
      "boot_command": ["<tab> ks=floppy/ks.cfg<enter>"],

      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "10000s",

      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",

      "output_directory": "vm-parallels"

   },
   {
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",

      "vm_name": "{{user `os`}}-virtualbox",

      "vboxmanage": [
         ["modifyvm", "{{.Name}}", "--memory", "{{user `memsize`}}"],
         ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
      ],

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",

      "guest_additions_mode": "attach",

      "boot_wait": "3s",
      "floppy_files": ["ks.cfg"],
      "boot_command": ["<tab> ks=floppy/ks.cfg<enter>"],

      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "10000s",

      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",

      "output_directory": "vm-virtualbox"
   }],

   "provisioners": [
      {
         "type": "shell",
         "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
         "scripts": ["../packer_provisioning.sh"]
      }
   ],

   "post-processors": [
      {
         "type": "vagrant",
         "keep_input_artifact": true,
         "output": "box/{{user `os`}}-{{.Provider}}.box"
      }
   ]
}
