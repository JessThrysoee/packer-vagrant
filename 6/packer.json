{
   "variables" : {
      "vendor" : "",
      "os": "",
      "iso_url": "",
      "iso_checksum": "",
      "iso_checksum_type": "",

      "cpus": "1",
      "memsize": "1024",
      "disksize_parallels-iso": "10G",
      "disksize_virtualbox-iso": "10000",

      "redhat_registration_username": "{{env `REDHAT_REGISTRATION_USERNAME`}}",
      "redhat_registration_password": "{{env `REDHAT_REGISTRATION_PASSWORD`}}"
   },

   "builders": [{
      "type": "parallels-iso",
      "guest_os_type": "{{user `vendor`}}",

      "vm_name": "{{user `os`}}-parallels",

      "prlctl": [
         ["set", "{{.Name}}", "--memsize", "{{user `memsize`}}"],
         ["set", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
         ["set", "{{.Name}}", "--device-set", "hdd0", "--size", "{{user `disksize_parallels-iso`}}"]
      ],

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "parallels_tools_flavor": "lin",
      "parallels_tools_mode" : "attach",

      "boot_wait": "3s",
      "floppy_files": ["ks.cfg"],
      "boot_command": ["<tab> ks=floppy/ks.cfg<enter>"],

      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "10000s",

      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",

      "output_directory": "vm-parallels"

   },
   {
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",

      "vm_name": "{{user `os`}}-virtualbox",

      "vboxmanage": [
         ["modifyvm", "{{.Name}}", "--memory", "{{user `memsize`}}"],
         ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
      ],

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "guest_additions_mode": "attach",

      "disk_size": "{{user `disksize_virtualbox-iso`}}",
      "boot_wait": "3s",
      "floppy_files": ["ks.cfg"],
      "boot_command": ["<tab> ks=floppy/ks.cfg<enter>"],

      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "10000s",

      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",

      "output_directory": "vm-virtualbox"
   }],

   "provisioners": [
      {
         "type": "shell",
         "environment_vars": [
            "VENDOR={{user `vendor`}}",
            "REDHAT_REGISTRATION_USERNAME={{user `redhat_registration_username`}}",
            "REDHAT_REGISTRATION_PASSWORD={{user `redhat_registration_password`}}"
         ],
         "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
         "scripts": ["../packer_provisioning.sh"]
      }
   ],

   "post-processors": [
      {
         "type": "vagrant",
         "keep_input_artifact": true,
         "output": "box/{{user `os`}}-{{.Provider}}.box"
      }
   ]
}
