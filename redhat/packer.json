{
   "variables" : {
      "vendor" : "",
      "el": "{{env `EL`}}",
      "box_tag": "",
      "guest_os_type_parallels": "",
      "guest_os_type_virtualbox": "",
      "iso_url": "",
      "iso_checksum": "",
      "iso_checksum_type": "",

      "cpus": "1",
      "memsize": "1024",
      "disksize_parallels": "40G",
      "disksize_virtualbox": "40000",

      "boot_command" : "",

      "redhat_registration_username": "{{env `REDHAT_REGISTRATION_USERNAME`}}",
      "redhat_registration_password": "{{env `REDHAT_REGISTRATION_PASSWORD`}}"
   },

   "builders": [{
      "type": "virtualbox-iso",
      "guest_os_type": "{{user `guest_os_type_virtualbox`}}",

      "vm_name": "{{user `box_tag`}}-virtualbox",

      "vboxmanage": [
         ["modifyvm", "{{.Name}}", "--memory", "{{user `memsize`}}"],
         ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
      ],

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "guest_additions_mode": "attach",

      "disk_size": "{{user `disksize_virtualbox`}}",
      "boot_wait": "3s",
      "floppy_files": ["ks-{{user `el`}}.cfg"],
      "boot_command": ["{{user `boot_command`}}"],

      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "10000s",

      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",

      "output_directory": "vm-virtualbox"
   },
   {
      "type": "parallels-iso",
      "guest_os_type": "{{user `guest_os_type_parallels`}}",

      "vm_name": "{{user `box_tag`}}-parallels",

      "prlctl": [
         ["set", "{{.Name}}", "--memsize", "{{user `memsize`}}"],
         ["set", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
         ["set", "{{.Name}}", "--device-set", "hdd0", "--size", "{{user `disksize_parallels`}}"]
      ],

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "parallels_tools_flavor": "lin",
      "parallels_tools_mode" : "attach",

      "boot_wait": "3s",
      "floppy_files": ["ks-{{user `el`}}.cfg"],
      "boot_command": ["{{user `boot_command`}}"],

      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "10000s",

      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",

      "output_directory": "vm-parallels"

   }],

   "provisioners": [
      {
         "type": "shell",
         "environment_vars": [
            "VENDOR={{user `vendor`}}",
            "REDHAT_REGISTRATION_USERNAME={{user `redhat_registration_username`}}",
            "REDHAT_REGISTRATION_PASSWORD={{user `redhat_registration_password`}}"
         ],
         "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
         "scripts": ["provision/redhat_1.sh"]
      },
      {
         "pause_before": "30s",
         "type": "shell",
         "environment_vars": [
            "VENDOR={{user `vendor`}}",
            "REDHAT_REGISTRATION_USERNAME={{user `redhat_registration_username`}}",
            "REDHAT_REGISTRATION_PASSWORD={{user `redhat_registration_password`}}"
         ],
         "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
         "scripts": ["provision/redhat_2.sh"]
      }
   ],

   "post-processors": [
      {
         "type": "vagrant",
         "keep_input_artifact": true,
         "output": "box/{{user `box_tag`}}-{{.Provider}}.box"
      }
   ]
}
